include "m8c.inc"


;--------------------------------------------------
; Constants for Count_I API's.
;--------------------------------------------------

Count_I_CONTROL_REG_START_BIT:             equ 0x01    ; Control register start bit
Count_I_INT_REG:                           equ 0x0e1
Count_I_INT_MASK:                          equ 0x01


;--------------------------------------------------
; Register Address Constants for Count_I
;--------------------------------------------------

Count_I_COUNTER_REG:                   equ 0x20   ; DR0 Counter register
Count_I_PERIOD_REG:                    equ 0x21   ; DR1 Period register
Count_I_COMPARE_REG:                   equ 0x22   ; DR2 CompareValue register
Count_I_CONTROL_REG:                   equ 0x23   ; Control register
Count_I_FUNC_REG:                      equ 0x20   ; Function register
Count_I_INPUT_REG:                     equ 0x21   ; Input register
Count_I_OUTPUT_REG:                    equ 0x22   ; Output register


;--------------------------------------------------
; Count_I Macro 'Functions'
;--------------------------------------------------

   macro Count_I_Start_M
   or    reg[Count_I_CONTROL_REG],  Count_I_CONTROL_REG_START_BIT
   endm

   macro Count_I_Stop_M
   and   reg[Count_I_CONTROL_REG], ~Count_I_CONTROL_REG_START_BIT
   endm

   macro Count_I_EnableInt_M
   M8C_EnableIntMask Count_I_INT_REG, Count_I_INT_MASK
   endm

   macro Count_I_DisableInt_M
   M8C_DisableIntMask Count_I_INT_REG, Count_I_INT_MASK
   endm


